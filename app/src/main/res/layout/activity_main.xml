<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aaronmonteabaro.tshirtapp.MainActivity"
    android:orientation="vertical"
    android:background="@color/colorBackground">




    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/tshirt"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:layout_marginBottom="5dp"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/buttonLayout"
            android:padding="5dp"
            android:background="@color/buttonBackground"
            >
            <ImageView
                style="@style/navButton"
                android:src="@drawable/shop"
                android:background="@color/colorAccent"
                android:onClick="comingSoon"
                android:padding="2dp"
                />
            <ImageView
                style="@style/navButton"
                android:src="@drawable/web"
                android:background="@color/colorAccent2"
                android:onClick="comingSoon"
                />
            <ImageView
                style="@style/navButton"
                android:src="@drawable/phone"
                android:background="@color/colorAccent3"
                android:onClick="comingSoon"
                />
            <ImageView
                style="@style/navButton"
                android:src="@drawable/email"
                android:background="@color/colorAccent4"
                android:onClick="comingSoon"
                />
            <ImageView
                style="@style/navButton"
                android:src="@drawable/map"
                android:background="@color/colorAccent5"
                android:onClick="comingSoon"
                />
        </LinearLayout>

        <TextView
            style="@style/launchPageText"
            android:id="@+id/textHeader"
            android:text="@string/welcome"
            android:layout_toEndOf="@id/buttonLayout"
            android:layout_toRightOf="@id/buttonLayout"
            android:textSize="48sp"
            android:textStyle="bold"
            />
        <TextView
            style="@style/launchPageText"
            android:id="@+id/textHeader2"
            android:text="@string/welcome2"
            android:layout_toEndOf="@id/buttonLayout"
            android:layout_toRightOf="@id/buttonLayout"
            android:layout_below="@id/textHeader"
            android:textSize="28sp"
            android:textStyle="italic"
            android:layout_marginBottom="8dp"
            android:paddingRight="3dp"
            />
        <TextView
            style="@style/launchPageText"
            android:text="@string/message"
            android:layout_below="@id/textHeader2"
            android:layout_toEndOf="@id/buttonLayout"
            android:layout_toRightOf="@id/buttonLayout"
            android:textSize="24sp"
            />
    </RelativeLayout>
</LinearLayout>
